{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Match Reports",
  "version": "0.1.0",
  "identifier": "com.matchreports.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Match Reports",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "capabilities": [
        "fs",
        "shell"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}