{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "store",
    "windows": [
        "main"
    ],
    "permissions": [
        "store:default",
        {
            "identifier": "store:allow-load",
            "allow": [
                {
                    "path": "config.json"
                }
            ]
        },
        {
            "identifier": "store:allow-save",
            "allow": [
                {
                    "path": "config.json"
                }
            ]
        },
        {
            "identifier": "store:allow-get",
            "allow": [
                {
                    "path": "config.json"
                }
            ]
        },
        {
            "identifier": "store:allow-set",
            "allow": [
                {
                    "path": "config.json"
                }
            ]
        }
    ]
}
