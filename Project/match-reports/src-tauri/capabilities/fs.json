{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "fs",
    "windows": [
        "main"
    ],
    "permissions": [
        "fs:default",
        "fs:allow-read-text-file",
        "fs:allow-write-text-file",
        "fs:allow-exists",
        "fs:allow-mkdir",
        {
            "identifier": "fs:scope",
            "allow": [
                {
                    "path": "$APPDATA/match-reports/data"
                },
                {
                    "path": "$APPDATA/match-reports/data/**/*"
                }
            ]
        }
    ]
}